generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  type      UserTypes @default(user)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  vehicles Vehicles[]
}

enum UserTypes {
  user
  admin
}

enum VehicleTypes {
  new
  used
  scrap
}

model Vehicles {
  id            Int          @id @default(autoincrement())
  name          String
  model         String
  vehicle_class String
  vehicle_type  VehicleTypes
  year          Int
  kilometers    Int
  price         Int
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  UserId        Int
  user          User         @relation(fields: [UserId], references: [id])
  Images        Images[]

  @@index([UserId], name: "UserId")
}

model Images {
  id        Int      @id @default(autoincrement())
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  VehicleId Int
  vehicle   Vehicles @relation(fields: [VehicleId], references: [id])

  @@index([VehicleId], name: "VehicleId")
}
